{
  "compilerOptions": {
    "module":                           "ESNext",
    "target":                           "ESNext",
    "moduleResolution":                 "Node",
    "skipLibCheck":                     true,
    "jsx":                              "react-jsx",
    "jsxImportSource":                  "jsx-async-runtime",

    "strict":                           true,
    "noUnusedLocals":                   true,
    "noUncheckedIndexedAccess":         true,
    "forceConsistentCasingInFileNames": true

  },
  "include": [ "main/**/*.tsx" ],
  "exclude": [ "node_modules", "public" ]
}
